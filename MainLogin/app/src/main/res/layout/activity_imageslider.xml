<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Imageslider"
    android:background="#ffa500">
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/flipper"
        android:layout_below="@+id/flipper"
        android:background="#000001"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COLLEGE FACULTY"
        android:textAlignment="center"
        android:background="#000000"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:textColor="#cccc33"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:id="@+id/high"
        android:gravity="center_horizontal"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000001"
        android:layout_below="@id/high"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#000000">
                <LinearLayout
                    android:layout_width="250dp"
                    android:padding="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="250dp"
                    android:background="#cccc33">
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="130dp"
                        app:cardCornerRadius="65dp">
                        <ImageView
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_marginLeft="-25dp"
                            android:src="@drawable/sircllg" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:text="LECTURER: MR. KAMAL Singh "></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#D2000000"
                        android:layout_marginTop="2dp"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text="(C.S.E. BRANCH)"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="250dp"
                    android:padding="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="250dp"
                    android:background="#cccc33">
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="130dp"
                        app:cardCornerRadius="65dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/profile"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:text="LECTURER: M.K GANGWAR"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#D2000000"
                        android:layout_marginTop="2dp"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text="(WORKSHOP)"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="250dp"
                    android:padding="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="250dp"
                    android:layout_marginBottom="10dp"
                    android:background="#cccc33">
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="130dp"
                        app:cardCornerRadius="65dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                           android:src="@drawable/profile" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:text="LECTURER: UMRA KHAN"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#D2000000"
                        android:layout_marginTop="2dp"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text="(HOD PHYSICS)"></TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>