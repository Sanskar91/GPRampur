<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".st_dashboard"
    android:background="#000000"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view1"
        app:headerLayout="@layout/student_header"
        app:menu="@menu/student_menu"
        android:layout_gravity="start"
        android:background="#cccc33"
        app:itemTextColor="#000001"
        app:itemIconTint="#000000"
        app:itemIconSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:navigationIcon="@drawable/ic_action_name"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:layout_marginLeft="20dp"></androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/ic_action_name" ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="#cccc33"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/upnme"
            ></TextView>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_person_24"
            android:backgroundTint="#cccc33"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/upnme"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:gravity="center"
            android:id="@+id/dash"
            android:text="WELCOME TO DASHBOARD"
            android:fontFamily="sans-serif-black"
            android:textColor="#CCCC33"
            android:layout_marginTop="25dp"
            android:textSize="24dp"></TextView>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:id="@+id/gd"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dash"
            android:rowCount="3"
            android:useDefaultMargins="true">
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="2"
                android:backgroundTint="#cccc33"
                android:layout_columnWeight="2"
                app:cardCornerRadius="20dp"
                android:onClick="stprofile"
                android:elevation="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center_horizontal"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:text="PROFILE"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:backgroundTint="#cccc33"
                android:layout_column="1"
                android:layout_rowWeight="2"
                android:layout_columnWeight="2"
                app:cardCornerRadius="20dp"
                android:onClick="stnotification"
                android:layout_marginTop="10dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="90dp"
                        android:src="@drawable/notification"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="NOTIFICATIONS"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="2"
                android:layout_columnWeight="2"
                android:onClick="stassignment"
                android:backgroundTint="#cccc33"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/assignment"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="ASSIGNMENT"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:onClick="faculty"
                android:layout_column="1"
                android:backgroundTint="#cccc33"
                android:layout_rowWeight="2"
                android:layout_columnWeight="2"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/facul"
                        android:layout_gravity="center_horizontal"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:text="FACULTY"></TextView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_rowWeight="2"
                android:layout_columnWeight="2"
                android:backgroundTint="#cccc33"
                app:cardCornerRadius="20dp"
                android:onClick="developer"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/deve"
                        app:tint="#000001"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="DEVELOPER"></TextView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_rowWeight="2"
                android:backgroundTint="#cccc33"
                android:layout_columnWeight="2"
                android:onClick="exit"
                app:cardCornerRadius="20dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_exit_to_app_24"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-black"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="SIGN OUT"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>