<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stdeveloper"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prog"
        android:background="#D2000000">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/devim"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/image_background"
                android:padding="5dp"
                android:src="@drawable/myimageround"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="Android Developer"></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="5dp"
            android:layout_height="140dp"
            android:id="@+id/uline1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/devim"
            android:background="@drawable/underline"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/uline1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#cccc33"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:fontFamily="sans-serif-black"
                android:layout_height="wrap_content"
                android:text="Name : Sanskar Saxena"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#cccc33"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:fontFamily="sans-serif-black"
                android:layout_height="wrap_content"
                android:text="Mob : 9520311310"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#cccc33"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-black"
                android:layout_height="wrap_content"
                android:text="Standard: Beginner"></TextView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/prog"
        android:padding="20dp"
        android:id="@+id/social"
        android:background="#59ffa500"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/fb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/fb"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/gaamil"
                android:padding="5dp"
                android:src="@drawable/gaamil"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/youtube"
                android:padding="5dp"
                android:src="@drawable/youtube"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/insta"
                android:padding="5dp"
                android:src="@drawable/insta"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/social">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/buttonstyle"
            android:padding="15dp"
            android:text="About Me"
            android:gravity="center_horizontal"></TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:background="#59ffa500"
                    android:text="I am Sanskar Saxena  student of Government Polytechnic Rampur
(Uttar Pradesh).I Am Purshuing My Diploma In Computer Science And Engineering From Gov. Polytechnic Rampur.
I Had Completed My High School And Intermediate(PCM).
I Was Not A Studios Student Since My Childhood But I Was Always Good In Computer Studies.I Always Want To Be A Developer So I Choose  Android Development As My Carrier.
I Am Also Purshuing My Industrial Training From Techpile Technology Private Ltd.(Lucknow).I Started My Developer Carrier From Techpile."
                    ></TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>