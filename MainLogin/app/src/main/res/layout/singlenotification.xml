<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/addesign"
    android:layout_margin="10dp"
    android:padding="4dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#00000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/adback"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notisub"
                android:textColor="#ffa500"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Information Related To the Exam"
                android:fontFamily="sans-serif-black"
                android:textSize="14dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notidescription"
                android:textColor="#cccc33"
                android:layout_marginLeft="10dp"
                android:text="Information Related To the Exam Information "
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22 August 2020"
                android:gravity="right"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:layout_marginRight="10dp"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>