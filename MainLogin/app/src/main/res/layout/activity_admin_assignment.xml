<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".admin_assignment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Assignment"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#cccc33"
        android:textSize="40dp"></TextView>
    <TextView
        android:layout_width="260dp"
        android:layout_height="10dp"
        android:background="@drawable/underline"
        android:layout_gravity="center"></TextView>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_baseline_note_add_24"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonstyle"
        app:tint="#000001"
        android:padding="10dp"></ImageView>
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:text=" Select Course :"
        android:textColor="#cccc33"
        android:textSize="13dp"></TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stucourse"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Diploma"
            android:id="@+id/coursediploma"
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text=" Select Branch :"
        android:textColor="#cccc33"
        android:textSize="13dp"></TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stubranch"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/branchcs"
            android:layout_marginRight="10dp"
            android:text="C.S.E"
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="E.E."
            android:id="@+id/branchee"
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/brancheeic"
            android:layout_marginRight="10dp"
            android:text="E.E.(I.C.)"
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:id="@+id/brIC"
            android:text="I.C."
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text=" Select Year  :"
        android:textColor="#cccc33"
        android:textSize="13dp"></TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stuyear"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/yearfirst"
            android:text="First.."
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/yearsecond"
            android:layout_marginRight="5dp"
            android:text="Second."
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/yearthree"
            android:layout_marginRight="5dp"
            android:text="Third."
            android:textColor="#cccc33"
            android:buttonTint="#cccc33"
            android:textSize="11dp"></RadioButton>


    </RadioGroup>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Subject "
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColorHint="#cccc33"
        android:id="@+id/stsubject"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="#cccc33"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeWidth="2dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#cccc33"
            android:inputType="text"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Enter Sub Description"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#cccc33"
        android:id="@+id/stdescription"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="#cccc33"
        app:boxStrokeWidth="2dp"
        android:lines="10"
        android:scrollbars="vertical"
        android:minLines="3">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textColor="#cccc33"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Remarks "
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#cccc33"
        android:id="@+id/stremark"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:boxStrokeColor="#cccc33"
        app:boxStrokeWidth="2dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#cccc33"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Assignment"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnassign"
        android:layout_marginRight="30dp"
        android:textColor="#000000"
        android:background="@drawable/buttonstyle"
        android:layout_marginBottom="30dp"></Button>
    </LinearLayout>
</ScrollView>

</LinearLayout>